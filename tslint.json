{
	"rules":{
		"max-line-length":{
			"options":[ 120 ]
		},
		"ban-types": {
            "options": [
                ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
                ["Function", "Avoid using the `Function` type. Prefer a specific function type, like `() => void`, or use `ts.AnyFunction`."],
                ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
                ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
                ["String", "Avoid using the `String` type. Did you mean `string`?"]
            ]
		},
		"adjacent-overload-signatures":true,
		"member-access":[true, "check-accessor"],
		"no-namespace":true,
		"no-duplicate-super":true,
		"no-duplicate-imports":true,
		"no-duplicate-switch-case":true,
		"no-eval":true,
		"no-var-keyword":true,
		"switch-default":true,
		"eofline":false,
		"indent":[true, "tabs", 4],
		"object-literal-sort-keys":[true, "match-declaration-order"],
		"prefer-readonly":true,
		"trailing-comma":[ 
			true, 
			{
				"multiline": {
					"arrays": "always",
					"object": "always",
					"imports": "never",
					"exports": "never",
					"functions": "ignore"
				},
				"singleline": {
					"arrays": "always",
					"object": "always",
					"imports": "never",
					"exports": "never",
					"functions": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"align":true,
		"arrow-return-shorthand":true,
		"no-unnecessary-callback-wrapper":true,
		"no-consecutive-blank-lines":true,
		"no-trailing-whitespace": [true, "ignore-template-strings", "ignore-blank-lines"],
		"object-literal-key-quotes": [true, "as-needed"],
		"quotemark":[true, "double"],
		"semicolon": [true, "never"],
		"variable-name":[true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
	}
}